@model CategoryInfo
@{
    ViewData["Title"] = "Details";
}

<h3>Details</h3>
<from asp-action="Details">
    <div class="container">
        <input type="hidden" asp-for="Category_Id" />
        <div class="row mb-3">
            <div class="col-md-3">Title</div>
            <div class="col-md-9">@Model.CategoryTitle </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">Prize</div>
            <div class="col-md-9">@Model.CategoryPrize </div>
        </div>
        
      
        <div class="row mb-3">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <a asp-action="index" class="btn btn-primary">Back to HomePage</a>
            </div>
        </div>
    </div>
</from>


