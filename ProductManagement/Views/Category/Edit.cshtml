@model CategoryInfo
@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Product</h4>
<form asp-action="Edit">
    <div class="container">
        <input type="hidden" asp-for="Category_Id" />
        <div class="row mb-3">
            <div class="col-md-3">Title</div>
            <div class="col-md-9">
                <input type="text" asp-for="CategoryTitle" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">Prize</div>
            <div class="col-md-9">
                <input type="text" asp-for="CategoryPrize" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <input type="Submit" value="save" class="btn btn-primary" />
                <a asp-action="index" class="btn btn-primary">Back to HomePage</a>
            </div>
        </div>
    </div>
</form>

